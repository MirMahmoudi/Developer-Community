
<%- include("./components/header") %>

<div class="header">
    <h1>Matrix Master Community </h1>
</div>

<form method="POST" action=/edit-question/<%= result._id%>> 
    <div class="form-group">
        <h5>Edit a Question </h5>
        <input type="text" name="question" value="<%= result.question%>" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" >
    </div>
    <div class="form-group">
        <input type="text" name="description" value="<%= result.description%>" class="form-control" id="exampleInputPassword1" >
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

